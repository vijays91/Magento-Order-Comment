<?xml version="1.0"?>
<config>
    <modules>
        <Learn_OrderComment>
            <version>1.0.0</version>
        </Learn_OrderComment>
    </modules>
    <global>
        <models>
            <ordercomment>
                <class>Learn_OrderComment_Model</class>
                <resourceModel>ordercomment_resource</resourceModel>
            </ordercomment>
            <ordercomment_resource>
                <class>Learn_OrderComment_Model_Resource</class>
                <deprecatedNode>ordercomment_mysql4</deprecatedNode>
            </ordercomment_resource>
            <sales_resource>
                <rewrite>
                    <order_grid_collection>Learn_OrderComment_Model_Mysql4_Order_Grid_Collection</order_grid_collection>
                </rewrite>
            </sales_resource>
        </models>
        <helpers>
            <ordercomment>
                <class>Learn_OrderComment_Helper</class>
            </ordercomment>
        </helpers>
        <blocks>
            <ordercomment>
                <class>Learn_OrderComment_Block</class>
            </ordercomment>
            <!-- Admin Grid Showing -->
            <adminhtml>
                <rewrite>
                    <sales_order_grid>Learn_OrderComment_Block_Adminhtml_Sales_Order_Grid</sales_order_grid>
                </rewrite>
            </adminhtml>
            
            <!-- Add the Order comment Template in frontend -->
            <checkout>
                <rewrite>
                    <agreements>Learn_OrderComment_Block_Checkout_Agreements</agreements>
                </rewrite>
            </checkout>
        </blocks>
    </global>
    <frontend>
        <events>
            <checkout_type_onepage_save_order>
                <observers>
                    <saveCustomerComment>
                        <class>Learn_OrderComment_Model_Observer</class>
                        <method>saveOrderComment</method>
                    </saveCustomerComment>
                </observers>
            </checkout_type_onepage_save_order>
            
            <checkout_type_multishipping_create_orders_single>
                <observers>
                    <saveCustomerComment>
                        <class>Learn_OrderComment_Model_Observer</class>
                        <method>saveOrderComment</method>
                    </saveCustomerComment>
                </observers>
            </checkout_type_multishipping_create_orders_single>
        </events>
    </frontend>
</config>
